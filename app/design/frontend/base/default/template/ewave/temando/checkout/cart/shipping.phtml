        <script type="text/javascript">
        //<![CDATA[
            var coShippingMethodForm = new VarienForm('shipping-zip-form');
            var countriesWithOptionalZip = <?php echo $this->helper('directory')->getCountriesWithOptionalZip(true) ?>;
            
            var selectedState = '<?php echo $this->getEstimateRegionId()?>';

            coShippingMethodForm.submit = function () {
                var country = $F('country');
                var optionalZip = false;

                for (i=0; i < countriesWithOptionalZip.length; i++) {
                    if (countriesWithOptionalZip[i] == country) {
                        optionalZip = true;
                    }
                }
                if (optionalZip) {
                    $('postcode').removeClassName('required-entry');
                }
                else {
                    $('postcode').addClassName('required-entry');
                }
                return VarienForm.prototype.submit.bind(coShippingMethodForm)();
            }
            
            Event.observe('country', 'change', function() {

                showHideInfo()

            });
            
            new Autocomplete('pcs', {
                serviceUrl: "<?php echo $this->getUrl('etemando/pcs/autocompletecart', array('_secure' => Mage::app()->getStore()->isCurrentlySecure())); ?>",
                onSelect: function(value, data) {
                    
                    $('city').value = data[0]['city'];
                    $('postcode').value = data[0]['postcode'];

                    var myChoice = data[0]['region_id'];

                    $$('select#region_id option').each(function(o) {
                        o.selected = o.readAttribute('value') == myChoice;
                    });

                },
		    onLoadStart: function() {
			$('city').value = '';
			$('postcode').value = '';
			$('region_id').value = '';
			$('estimate_field').addClassName('active');
		    },
		    onLoadComplete: function() {
			$('estimate_field').removeClassName('active');
		    },
		    onAway: function() {
			if (!$('city').value) {
			    $('pcs').value = '';
			    pcsBlur();
			}
		    }
               })
                
            
            function showHideInfo() {
            
                if ($('country').value == 'AU') {
                    
                    if (selectedState != '') {
                        $$('select#region_id option').each(function(o) {
                            o.selected = o.readAttribute('value') == selectedState;
                        });
                    }
                    
                    $('region_container').hide();
                    $('city_container').hide();
                    $('postcode_container').hide();

                    $('pcs_container').show();

                   
                } else {
                    
                    $('region_container').show();
                    $('city_container').show();
                    $('postcode_container').show();

                    $('pcs_container').hide();
                    
                }
            }
            
            showHideInfo();
